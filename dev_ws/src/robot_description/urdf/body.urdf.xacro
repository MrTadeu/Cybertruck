<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <material name="body_front_color">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <link name="world"></link>

    <link name="base">
        <visual>
            <origin xyz="2 0 0" rpy="1.57 0 0"/>
            <geometry>
                <box size="5 0.1 3" />
            </geometry>
            <material name="body_front_color" />
        </visual>
    </link>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="body_front">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <!-- <cylinder radius="0.5" length="1.0"/> -->
                    <mesh filename="package://robot_description/meshes/body_front.stl" scale="1.0 1.0 1.0"/>
                </geometry>
            <material name="body_front_color" />
        </visual>
    </link>

    <joint name="base_to_body_front" type="fixed">
        <parent link="base"/>
        <child link="body_front"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>
</robot>